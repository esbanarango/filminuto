<div class="row">
  <div id="legend" class="">
    <legend class="">
      <h2>Listing videos</h2>
    </legend>
  </div>
  <% @videos.each_with_index do |video, i| %>
    <%= "<div class='row-fluid'>".html_safe if i%3 == 0%>    
      <div class="span4">
        <h3><%=video.title%></h3>
        <p><%=video.description%></p>
        <video id="my_video_1" class="video-js vjs-default-skin" controls preload="auto" width="340" height="264" 
              poster="<%=video.file.url('thumb')%>" data-setup="{}">
          <source src="<%=video.file.url('mp4')%>" type='video/mp4'>
        </video>
        <div class="controls">
          <%= link_to 'Show', user_video_path(current_user,video) %> |
          <%= link_to 'Edit', edit_user_video_path(current_user,video) %> |
          <%= link_to 'Destroy', user_video_path(current_user,video), method: :delete, data: { confirm: 'Are you sure?' } %>        
        </div>
      </div><!--/span-->
    <%= '</div>'.html_safe if (i+1 == @videos.length) || ((i+1)%3 == 0)%> 
  <% end %>
</div> 