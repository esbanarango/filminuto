<%= simple_form_for([current_user,@video], :html => {:multipart => true, :class => "form-inline"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: false, placeholder: 'Title', input_html: { style: "width: 260px;" } %>
    <%= f.input :description, label: false, placeholder: 'Description', input_html: { style: "width: 260px; height: 100px;" }  %>
    <%= f.input :file, label: false%> 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
